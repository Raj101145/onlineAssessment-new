@{
    ViewData["Title"] = "Internships";
    Layout = "_Layout";
}

@section Scripts {
    <script>
        // Redirect to registration page
        window.location.href = '/Auth/Register';
    </script>
}

@section Styles {
    <style>
        /* Additional styles for Internship page */
        .internship-hero {
            padding: 80px 0 100px;
            background-color: #f8f9fa;
            background-image: radial-gradient(#e9ecef 1px, transparent 1px), radial-gradient(#e9ecef 1px, transparent 1px);
            background-size: 20px 20px;
            background-position: 0 0, 10px 10px;
            position: relative;
            overflow: hidden;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            color: #333;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 1.1rem;
            line-height: 1.8;
            max-width: 800px;
            margin: 0 auto;
            color: #6c757d;
        }

        /* Certificate Slider Styles */
        .certificate-slider-container {
            position: relative;
            max-width: 800px;
            margin: 0 auto;
            padding: 15px 0;
            height: 320px;
        }

        .certificate-slider {
            width: 100%;
            height: 100%;
            overflow: visible;
            padding: 20px 0;
        }

        .certificate-slider .swiper-slide {
            width: 320px;
            height: auto;
            transition: all 0.3s ease;
            opacity: 0.7;
            transform: scale(0.85) translateZ(-100px);
            filter: blur(1px);
            perspective: 1000px;
        }

        .certificate-slider .swiper-slide-active {
            opacity: 1;
            transform: scale(1) translateZ(0);
            z-index: 2;
            filter: blur(0);
        }

        .certificate-slider .swiper-slide-prev,
        .certificate-slider .swiper-slide-next {
            opacity: 0.8;
            transform: scale(0.9) translateZ(-50px);
            filter: blur(0.5px);
        }

        .certificate-card {
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            position: relative;
            padding: 8px;
            border: 1px solid #eaeaea;
        }

        .certificate-card img {
            width: 100%;
            height: auto;
            display: block;
            transition: transform 0.5s;
            border-radius: 8px;
        }

        .certificate-card:hover img {
            transform: scale(1.02);
        }

        .certificate-navigation {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
            gap: 20px;
        }

        .certificate-button-prev,
        .certificate-button-next {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background-color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            color: var(--primary-color);
            z-index: 10;
        }

        .certificate-button-prev:hover,
        .certificate-button-next:hover {
            background-color: var(--primary-color);
            color: #fff;
        }

        .certificate-pagination {
            position: absolute;
            bottom: -10px;
            left: 0;
            right: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .certificate-badge {
            position: absolute;
            bottom: 12px;
            right: 12px;
            background: linear-gradient(135deg, #ff5722, #ff9800);
            color: white;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            border: 2px solid white;
            z-index: 2;
        }

        .internship-card {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            margin-bottom: 20px;
            overflow: hidden;
            background-color: white;
        }

        .internship-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .internship-card .card-body {
            padding: 20px;
        }

        .company-logo {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 15px;
        }

        .internship-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .company-name {
            font-size: 1rem;
            color: #6c757d;
            margin-bottom: 15px;
        }

        .internship-details {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 15px;
        }

        .detail-item {
            display: flex;
            align-items: center;
            margin-right: 20px;
            margin-bottom: 10px;
        }

        .detail-item i {
            color: var(--primary-color);
            margin-right: 8px;
        }

        .filter-section {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }

        .filter-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 15px;
        }

        @@media (max-width: 768px) {
            .certificate-slider-container {
                height: 280px;
            }
            .certificate-slider .swiper-slide {
                width: 280px;
            }
        }

        @@media (max-width: 576px) {
            .certificate-slider-container {
                height: 250px;
            }
            .certificate-slider .swiper-slide {
                width: 240px;
            }

            .certificate-button-prev,
            .certificate-button-next {
                width: 30px;
                height: 30px;
            }

            .certificate-badge {
                width: 25px;
                height: 25px;
                font-size: 0.8rem;
            }
        }
    </style>
}

